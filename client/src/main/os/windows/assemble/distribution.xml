<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>src/main/os/windows/native
			</directory>
			<outputDirectory>/System/Lib</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/os/windows/installer/icons
            </directory>
			<outputDirectory>/icons</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/i18n</directory>
			<outputDirectory>/System/i18n</outputDirectory>
			<excludes>
                <exclude>disclaimerlinux.htm</exclude>
            </excludes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/emoticons</directory>
			<outputDirectory>/System/emoticons</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/scripts</directory>
			<outputDirectory>/System/scripts</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/images</directory>
			<outputDirectory>/System/images</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/sounds</directory>
			<outputDirectory>/System/sounds</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>src/main/os/windows/scripts/AllDotComClient.exe
			</source>
			<outputDirectory>/</outputDirectory>
		</file>
	</files>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/System/Jar</outputDirectory>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}
			</outputFileNameMapping>
			<unpack>false</unpack>
		</dependencySet>
	</dependencySets>
</assembly>